<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for the app -->
    <style name="Theme.IskorKo" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Make status bar match splash background -->
        <item name="android:statusBarColor">#EDEDED</item>
        <item name="android:navigationBarColor">#EDEDED</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <!-- Splash screen theme - shows immediately on app launch -->
    <style name="Theme.IskorKo.Splash" parent="Theme.IskorKo">
        <item name="android:windowBackground">#EDEDED</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>