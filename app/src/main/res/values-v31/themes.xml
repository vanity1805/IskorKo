<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme for Android 12+ - minimal system splash -->
    <style name="Theme.IskorKo" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#EDEDED</item>
        <item name="android:navigationBarColor">#EDEDED</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">#EDEDED</item>
        
        <!-- Make system splash as minimal as possible -->
        <item name="android:windowSplashScreenBackground">#EDEDED</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
    </style>
    
    <style name="Theme.IskorKo.Splash" parent="Theme.IskorKo" />
</resources>